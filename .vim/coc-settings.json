{
    "diagnostic.displayByAle": true,
    "languageserver":{
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod", ".git/"],
            "filetypes": ["go"]
        },
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"],
            "ignoredRootPaths": ["~"]
        },
        "dockerfile": {
            "command": "docker-langserver",
            "filetypes": ["dockerfile"],
            "args": ["--stdio"]
        }
    },
    "snippets.ultisnips.directories": [
        "UltiSnips",
        "gosnippets/UltiSnips"
    ]
}
